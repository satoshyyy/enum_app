<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :genre %>
    <!-- Post.genres を Post.genres_i18n.invert に変更 -->
    <%= form.select :genre, Post.genres_i18n.invert %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>